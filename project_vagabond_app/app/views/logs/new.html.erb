<body id="form_page">
	<div class="col-xs-6 col-xs-offset-3" id="form">
	<%= bootstrap_form_for @log, url: new_log_form_path, method: "post" do |f| %>

  <div>
    <%= f.text_field :title, placeholder: "Title" %><br>
    <%= f.text_area :body %>
  </div>

    <%= f.hidden_field :author, :value => @user.email %>

    <%= f.collection_select :city, @cities, :city, :city, :prompt => "Select City..."%>

    <%= f.submit %>

	<% end %>
	</div>
</body>