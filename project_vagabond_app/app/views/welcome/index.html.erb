<div id="video" class="jumbotron vertical-center">
	<div class="container">
		<h1>Travel-Zine</h1>

		<p>There are currently <%= @users.length %> users signed up.</p>
		  
		<% if current_user %>
			<button class='ghost btn'><%= link_to "Profile", user_path(current_user), method: :get %></button>
			<button class='ghost btn'><%= link_to "Edit", edit_user_path(current_user), method: :get %></button>
			<button class='ghost btn'><%= link_to "Logout", logout_path, method: :delete %></button>
		<% else %>
			<button class='ghost btn'><%= link_to "Signup", signup_path, method: :get %></button>
			<button class='ghost btn'><%= link_to "Login", login_path %></button>
		<% end %>
	</div>
</div>
  
